<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smithinc.mobile_banking"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="auto">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.smithinc.mobile_banking.LoginActivity"
            android:label="Login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
          	android:name="com.smithinc.mobile_banking.DashboardActivity"
          	android:label="Pick an Option" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smithinc.mobile_banking.RegisterUserLoginActivity"
            android:label="Register" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                
                <category android:name="android.intent.category.DEFAULT" />              
            </intent-filter>
        </activity>
        <activity
            android:name="com.smithinc.mobile_banking.RegisteredUserLoginActivity"
            android:label="Login" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.smithinc.mobile_banking.AccountViewActivity"
            android:label="Accounts" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
       	<activity
       	    android:name="com.smithinc.mobile_banking.TransferFundsActivity"
       	    android:label="Transfer" >
       	    <intent-filter>
       	        	<action android:name="android.intent.action.VIEW" />
       	        	
       	        	<category android:name="android.intent.category.DEFAULT" />
       	    </intent-filter>
       	</activity>
    </application>

</manifest>